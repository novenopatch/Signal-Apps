<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="jin.jerrykel.dev.signal" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/img_icone"

        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_icone_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".vue.Activities.LoginActivity"
            android:theme="@style/LoginTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".vue.Activities.Main.MainActivity"
            android:label="WG SIGNALS"/>
        <activity
            android:name=".vue.Activities.settings.SettingActivity"
            android:label="@string/settings"
            android:parentActivityName=".vue.Activities.Main.MainActivity" />
        <activity
            android:name=".vue.Activities.settings.road.AccountActivity"
            android:label="@string/account"
            android:parentActivityName=".vue.Activities.settings.SettingActivity" />
        <activity
            android:name=".vue.Activities.settings.road.AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".vue.Activities.settings.SettingActivity" />
        <activity
            android:name=".vue.Activities.settings.road.PayActivity"
            android:label="@string/Payment"
            android:parentActivityName=".vue.Activities.settings.road.AccountActivity" />
        <activity
            android:name=".vue.Activities.settings.road.HelpActivity"
            android:label="@string/help"
            android:parentActivityName=".vue.Activities.settings.SettingActivity" />
        <activity
            android:name=".vue.Activities.settings.road.ProfileActivity"
            android:label="@string/profile"
            android:parentActivityName=".vue.Activities.settings.SettingActivity" />
        <activity
            android:name=".vue.dashboard.DashboardActivity"
            android:parentActivityName=".vue.Activities.settings.SettingActivity"
            android:theme="@style/MainTheme" />

        <service
            android:name=".api.NotificationsService"
            tools:ignore="WrongManifestParent" >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>