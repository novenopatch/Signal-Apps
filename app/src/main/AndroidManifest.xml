<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/img_icone"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img_icone_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".vue.Activities.TutoActivity" />
        <activity
            android:name=".vue.Activities.LoginActivity"
            android:theme="@style/LoginTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vue.Activities.main.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".vue.Activities.settings.SettingActivity"
            android:label="@string/settings"
            android:parentActivityName=".vue.Activities.main.MainActivity" />
        <activity
            android:name=".vue.Activities.settings.road.AccountActivity"
            android:label="@string/account"
            android:parentActivityName=".vue.Activities.settings.SettingActivity" />
        <activity android:name=".vue.Activities.LicenceAccepteActivity" />
        <activity
            android:name=".vue.Activities.settings.road.OpenSourceActivity"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".vue.dashboard.DashboardActivity"
            android:parentActivityName=".vue.Activities.settings.SettingActivity"
            android:theme="@style/MainTheme" />

        <service
            android:name=".api.NotificationsService"
            tools:ignore="WrongManifestParent"
            android:exported="true"
            android:permission="TODO">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".api.ServiceGetSignal" />

        <receiver android:name=".api.ServerBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5255918758346330~7765220435"/>
    </application>

</manifest>